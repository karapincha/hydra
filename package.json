{
	"name": "hydra",
	"private": true,
	"repository": {
		"type": "git",
		"url": "git@github.com:karapincha/hydra.git"
	},
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"commit": "git-cz",
		"bootstrap": "npx lerna bootstrap",
		"publish:ci": "lerna publish from-package --yes",
		"version:ci": "lerna version --yes --conventional-commits --create-release github --message 'chore(release): publish'",
		"clean": "lerna run clean",
		"build": "yarn clean && lerna run build --scope '{}'"
	},
	"devDependencies": {
		"commitizen": "4.2.4",
		"cz-conventional-changelog": "3.3.0",
		"lerna": "4.0.0",
		"sass": "1.38.0",
		"glob": "7.1.7"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
